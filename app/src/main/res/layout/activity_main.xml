<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/black">


    <EditText
        android:id="@+id/etUserQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ask your question..."
        android:textColor="@color/black"
        android:textColorHint="@android:color/darker_gray"
        android:background="@drawable/input_text_shape"
        android:padding="12dp"
        android:drawablePadding="8dp"
        android:inputType="text"
        tools:ignore="Autofill,HardcodedText,RtlSymmetry,VisualLintTextFieldSize" />



    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnRevealInterpretation"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/btn_shape"
        android:padding="12dp"
        android:text="Reveal Interpretation"
        android:textColor="@android:color/white"
        tools:ignore="HardcodedText,TextSizeCheck" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnViewPastReadings"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/btn_shape"
        android:padding="12dp"
        android:text="@string/view_past_readings"
        android:textColor="@android:color/white"
        tools:ignore="TextSizeCheck" />



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvTarotDeck"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:scrollbars="vertical" />
</LinearLayout>
